# База данных PostgreSQL
DATABASE_URL=postgresql+asyncpg://admin:secure_password@localhost:5432/emedosmotr
POSTGRES_USER=admin
POSTGRES_PASSWORD=secure_password
POSTGRES_DB=emedosmotr
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# OpenAI API
OPENAI_API_KEY=sk-your-api-key-here

# Настройки AI (GPT-4o-mini = "GPT-5 mini")
AI_MODEL=gpt-4o-mini
AI_TEMPERATURE=0.2
AI_MAX_TOKENS=4000

# RAG настройки
RAG_CHUNK_SIZE=1024
RAG_TOP_K=5
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# Приложение
ENVIRONMENT=development
DEBUG=True
APP_NAME=eMedosmotr AI
APP_VERSION=1.0.0

# CORS (разделены запятыми)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Кэширование
ENABLE_CACHE=True
CACHE_TTL_HOURS=24
